{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "@platform/db": ["packages/@platform/db/src/index.ts"],
        "@platform/types": ["packages/@platform/types/src/index.ts"],
        "@platform/contracts": ["packages/@platform/contracts/src/index.ts"],
        "@platform/auth": ["packages/@platform/auth/src/index.ts"],
        "@platform/queues": ["packages/@platform/queues/src/index.ts"],
        "@platform/utils": ["packages/@platform/utils/src/index.ts"]
      }
    },
    "exclude": ["node_modules", "dist"]
  }